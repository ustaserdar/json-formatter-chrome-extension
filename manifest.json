{
  "manifest_version": 3,
  "name": "JSON Copy Cleaner",
  "version": "1.0.0",
  "description": "Chrome Browser'dan JSON içeriği temizleyerek kopyalama",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JSON Copy Cleaner",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png", 
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
} 